@SET_MAKE@

subdir = doc
prefix = @prefix@

FIGURES = fig_grid.fig fig_small_circle.fig

DISTFILES = Makefile.in doxygen.conf.in $(FIGURES)

INSTALL = @INSTALL@

all:

doc:	doxygen.conf $(FIGURES:.fig=.png)
	doxygen $<
	cp -f $(FIGURES:.fig=.png) html

install:

clean:
	rm -rf html
	rm -f $(FIGURES:.fig=.png)

%.png : %.fig
	fig2dev -L png $< $@
%.eps : %.fig
	fig2dev -L eps $< $@

dep:

distdir = ../@PACKAGE_TARNAME@-@PACKAGE_VERSION@/$(subdir)
dist:	Makefile $(DISTFILES)
	for file in $(DISTFILES) ; do \
		ln $$file $(distdir) 2>/dev/null || \
			cp -p $$file $(distdir); \
	done
