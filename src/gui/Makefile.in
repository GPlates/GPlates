@SET_MAKE@

subdir = src/gui
prefix = @prefix@

DISTFILES = Makefile.in plates.clr.inc *.cc *.h

INCLUDES = -I..
CXXFLAGS = @CXXFLAGS@ $(INCLUDES) @EXTRA_CFLAGS@
LDFLAGS = @LDFLAGS@ @EXTRA_LDFLAGS@

OBJS = AboutDialog.o AnimationTimesDialog.o Colour.o FPValidator.o GLCanvas.o \
	GPlatesApp.o Globe.o MainWindow.o NurbsRenderer.o OpaqueSphere.o \
	Quadrics.o ReconstructTimeDialog.o SphericalGrid.o

LIBNAME = libgui.a

all:		$(LIBNAME)

clean:
	rm -f $(OBJS)
	rm -f $(LIBNAME)
	rm -f core gmon.out

$(LIBNAME):	$(OBJS)
		ar rc $@ $^

include ../Rules

distdir = ../../@PACKAGE_TARNAME@-@PACKAGE_VERSION@/$(subdir)
dist:	Makefile $(DISTFILES)
	for file in $(DISTFILES) ; do \
		ln $$file $(distdir) 2>/dev/null || \
			cp -p $$file $(distdir); \
	done
