@SET_MAKE@

subdir = src/controls
prefix = @prefix@

DISTFILES = Makefile.in *.cc *.h

INCLUDES = -I..
CXXFLAGS = @CXXFLAGS@ $(INCLUDES) @EXTRA_CFLAGS@ 
#												 @NETCDF_CPPFLAGS@
LDFLAGS = @LDFLAGS@ @EXTRA_LDFLAGS@

OBJS = AnimationTimer.o Dialogs.o File.o GuiCalls.o Reconstruct.o View.o

LIBNAME = libcontrols.a

all:		$(LIBNAME)

clean:
	rm -f $(OBJS)
	rm -f $(LIBNAME)
	rm -f core gmon.out

$(LIBNAME):	$(OBJS)
		ar rc $@ $^

include ../Rules

distdir = ../../@PACKAGE_TARNAME@-@PACKAGE_VERSION@/$(subdir)
dist:	Makefile $(DISTFILES)
	for file in $(DISTFILES) ; do \
		ln $$file $(distdir) 2>/dev/null || \
			cp -p $$file $(distdir); \
	done
