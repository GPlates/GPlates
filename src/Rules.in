%.o : %.cc
	@CXX@ $(CXXFLAGS) -c $< -o $@

################
# DEPENDENCIES #
################

dep:
	@echo -n "Generating dependencies... "
	@@CXX@ -MM $(INCLUDES) @EXTRA_CFLAGS@ $(OBJS:.o=.cc) > depend.1
	@echo "done!"

# This is a GNU-ism - cleverly ignored when not using GNU make
@ifGNUmake@ifeq (depend.1, $(wildcard depend.1))
include depend.1
@ifGNUmake@endif
