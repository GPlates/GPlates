%.o : %.cc
	@CXX@ $(CXXFLAGS) -c $< -o $@

################
# DEPENDENCIES #
################

dep:
	@echo -n "Generating dependencies... "
	@@CXX@ -MM $(OBJS:.o=.cc) > depend.1
	@echo "done!"

# This is a GNU-ism - probably will need dropping
ifeq (depend.1, $(wildcard depend.1))
include depend.1
endif
