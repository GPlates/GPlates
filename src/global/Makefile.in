@SET_MAKE@

subdir = src/global
prefix = @prefix@

DISTFILES = Makefile.in config.h.in *.cc *.h

INCLUDES = -I..
CXXFLAGS = @CXXFLAGS@ $(INCLUDES) @EXTRA_CFLAGS@
LDFLAGS = @LDFLAGS@ @EXTRA_LDFLAGS@

OBJS = Exception.o FPData.o

LIBNAME = libglobal.a

all:		$(LIBNAME)

clean:
	rm -f $(OBJS)
	rm -f $(LIBNAME)
	rm -f core gmon.out

$(LIBNAME):	$(OBJS)
		ar rc $@ $^

include ../Rules

distdir = ../../@PACKAGE_TARNAME@-@PACKAGE_VERSION@/$(subdir)
dist:	Makefile $(DISTFILES)
	for file in $(DISTFILES) ; do \
		ln $$file $(distdir) 2>/dev/null || \
			cp -p $$file $(distdir); \
	done
